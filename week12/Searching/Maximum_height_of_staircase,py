class Solution:
    # @param A : integer
    # @return an integer
    def BinSearch(self,A,st,end,ans):
        if st>end:
            return ans
        mid=(st+end)//2
        max_height=(mid*(mid+1))//2
        if max_height==A:
            ans=max(ans,mid)
            return ans
        if max_height>A:
            return self.BinSearch(A,st,mid-1,ans)
        else:
            ans=max(ans,mid)
            return self.BinSearch(A,mid+1,end,ans)
    def solve(self, A):
        return self.BinSearch(A,1,A,0)
